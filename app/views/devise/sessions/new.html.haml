= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'ui form'}, validate: true) do |f|
  .ui.three.column.centered.doubling.stackable.grid
    .column
      .ui.segment
        %h2.ui.dividing.header= t('actions.sign_in')
        .field
          = f.email_field :email, autofocus: true, placeholder: t('users.email')
        .field
          = f.password_field :password, autocomplete: "off", placeholder: t('users.password')

        - if devise_mapping.rememberable? and false
          .field
            = f.check_box :remember_me
            = f.label :remember_me

        .field
          = f.submit t('actions.sign_in'), class: 'ui button primary'

        = link_to t('actions.sign_up'), new_registration_path(resource_name)
