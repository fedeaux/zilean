- component_id = @template_params[:component_id]

.dashboard-component-controls
  .title
    = "{{ dashboard_ctrl.components['#{component_id}'].title }}"

    .actions
      %i.small.close.icon.action.close-button{ 'ng-click': "dashboard_ctrl.toggleComponentVisibility('#{component_id}')" }
      %i.small.trash.icon.action.destroy-button{ 'ng-show': "dashboard_ctrl.components['#{component_id}'].removable",
                                                 'ng-click': "dashboard_ctrl.removeComponent('#{component_id}')"}
