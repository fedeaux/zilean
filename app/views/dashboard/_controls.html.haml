#dashboard-controls
  .ui.dropdown.link
    .text Components
    %i.dropdown.icon

    .ui.menu
      .item{ 'ng-repeat': '(id, component) in dashboard_ctrl.components',
             'ng-class': '{ "active" : component.visible }',
             'ng-click': 'dashboard_ctrl.toggleComponentVisibility(id)' } {{ component.title }}
