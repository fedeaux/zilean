.table-selection#table-selection{ 'ng-show': 'log_entries_ctrl.table.segments.length > 0' }
  %p {{ log_entries_ctrl.table.number_of_selected_cells() }} selected cells. ( {{ log_entries_ctrl.table.time_of_selected_cells() | elapsed }})

  = form_tag '/', class: 'ui form' do
    .div{ ng: { repeat: 'segment in log_entries_ctrl.table.segments' } }
      .ui.fluid.mini.steps
        .step
          .title {{ segment.started_at.format('HH:mm') }}
        .step
          .title {{ segment.finished_at.format('HH:mm') }}

      .ui.field
        = select :log_entry, :activity_id, [], {}, { 'ng-model': 'activities_ctrl.form_activity.parent', 'ng-options': "option.breadcrumbs_path_names for option in dashboard_ctrl.shared_data.activities_select_options track by option.id*1" }

      .ui.field
        = text_area(:log_entry, :observations, 'ng-model': 'segment.observations')

      .ui.divider

    .ui.small.buttons
      .ui.primary.button{ 'ng-click': 'log_entries_ctrl.saveLogEntries()' } Save
      .ui.basic.button{ 'ng-click': 'log_entries_ctrl.table.clear_selection()' } Cancel
